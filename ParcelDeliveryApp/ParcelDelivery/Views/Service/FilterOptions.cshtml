@using ParcelDelivery.Enums
@model ParcelDelivery.Models.ServiceViewModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container py-3 col-md-6 col-lg-4 mx-auto">
    <form>
        <div class="form-group">
            <h3 class="text-center">Enter filter parametres</h3>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.EditorFor(model => model.MaxWeight, new { htmlAttributes = new { @class = "form-control", style = "min-width: 100%", placeholder = "Max wieght, ton" } })
                @Html.ValidationMessageFor(model => model.MaxWeight, "", new { @class = "text-danger" })
            </div>
            
            <div class="form-group">
                @Html.EditorFor(model => model.Distance, new { htmlAttributes = new { @class = "form-control", style = "min-width: 100%", placeholder = "Distance, km" } })
                @Html.ValidationMessageFor(model => model.Distance, "", new { @class = "text-danger" })
            </div>

            <div class="dropdown">
                <p>
                    @Html.DropDownList("TypeOfCargo",
                          Html.GetEnumSelectList(typeof(TypeOfCargo)),
                          "Choose type of cargo",
                          new { @class = "form-control" })
            </p>
            @Html.ValidationMessageFor(model => model.TypeOfCargo, "", new { @class = "text-danger" })
        </div>
        <div class="dropdown">
            <p>
                @Html.DropDownList("TransportationArea",
                         Html.GetEnumSelectList(typeof(TransportationArea)),
                         "Choose transportation area",
                         new { @class = "form-control" })
            </p>
            @Html.ValidationMessageFor(model => model.TransportationArea, "", new { @class = "text-danger" })
        </div>

        <input class="btn btn-primary btn-lg btn-block" style="min-width: 100%" type="submit" value="Pick up" />

    </div>
    </form>
    <a class="card-link" href='javascript:history.go(-1)'><span class="fa fa fa-arrow-left"></span>  Previous</a>
</div>
}
